<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinSession">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="226dp"
        android:layout_height="73dp"
        android:text="Enter the unique ID for the session. (Ask your session host!)"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="48dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Session ID"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/connect_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="293dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="123dp"
        android:layout_height="78dp"
        android:text="You will be redirected once your host begins the session!"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="589dp" />
</androidx.constraintlayout.widget.ConstraintLayout>